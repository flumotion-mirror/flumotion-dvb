Name:           @PACKAGE@
Version:        @VERSION@
Release:        @RELEASE@
Summary:        Flumotion DVB support

Group:          Applications/Internet
License:	Proprietary
URL:            http://www.fluendo.com/
Source:         %{name}-%{version}.tar.bz2
BuildRoot:      %{_tmppath}/%{name}-%{version}-%{release}-root

Requires:	flumotion > @FLUMOTION_REQ@

BuildRequires:	gettext
BuildRequires:	python >= 2.3
#BuildRequires:	epydoc
BuildRequires:  flumotion

%description
Flumotion DVB support.

%prep
%setup -q

%build
%configure

make

%install
rm -rf $RPM_BUILD_ROOT

%makeinstall

%find_lang flumotion-dvb

%clean
rm -rf $RPM_BUILD_ROOT

%files -f flumotion-dvb.lang
%defattr(-,root,root,-)
%doc ChangeLog COPYING README AUTHORS LICENSE.Flumotion LICENSE.GPL
%{_libdir}/flumotion

